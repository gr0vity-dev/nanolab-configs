{
    "testcase": "5n4pr_10k_change_cpu_limit",
    "description": "Publish 10k independant change blocks to all 4PRs.\nEach PR is cpu limited to 0.3 vCPU",
    "docker_tags": [
        "nanocurrency/nano:V25.0RC3"
    ],
    "global": {
        "BLOCK_PATH": "https://frmpm7m0wpcq.objectstorage.eu-frankfurt-1.oci.customer-oci.com/n/frmpm7m0wpcq/b/nanoct/o/5n4pr_bucket_rounds_short.json",
        "LEDGER_PATH": "https://frmpm7m0wpcq.objectstorage.eu-frankfurt-1.oci.customer-oci.com/n/frmpm7m0wpcq/b/nanoct/o/5n4pr_bucket0-1-88-90-100_10kaccs.ldb",
        "NL_CONFIG_PATH": "https://raw.githubusercontent.com/gr0vity-dev/nanolab-configs/main/5n4pr_quicktesting_config.toml"
    },
    "commands": [
        {
            "type": "snippet",
            "key": "nanomock_reset_copy_ledger_create",
            "variables": {
                "NL_CONFIG": "{NL_CONFIG_PATH}",
                "REMOTE_IP": "172.17.0.1",
                "SETUP_NODES": "nl_genesis nl_pr1 nl_pr2 nl_pr3 nl_pr4",
                "LEDGER": "{LEDGER_PATH}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit_create",
            "variables": {
                "PATH": "representatives.cpu",
                "VALUE": 0.3
            }
        },        
        {
            "type": "snippet",
            "key": "nanomock_start_init"
        },
        {
            "type": "threaded",
            "commands": [
                {
                    "type": "python",
                    "class": "NodeInteraction",
                    "method": "start_logger",
                    "delay": -0.1,
                    "variables": {
                        "logger_params": {
                            "type": "rpc",
                            "timeout": 90,
                            "expected_blocks_count": 10000,
                            "included_peers": [
                                "nl_pr1"
                            ]
                        },
                        "sink_params": [
                            {
                                "type": "console"
                            },
                            {
                                "type": "sql",
                                "db_uri": "sqlite:///nanolab_test.db",
                                "milestones": [10,25,50,75,90,99,100]
                            }
                        ]
                    }
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 500,
                            "start_round": 0,
                            "end_round": 1,
                            "subset": {
                                "start_index": 0,
                                "end_index": 10000
                            }
                        }
                    },
                    "class": "NodeInteraction"
                }
            ]
        }
    ]
}