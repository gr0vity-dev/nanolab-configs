{
    "testcase": "5n4pr_100k_bintree_cpu_limit",
    "description": "Publish 100k bintree (send + receive) blocks to all 4PRs.\nEach PR is cpu limited to 0.3 vCPU",
    "docker_tags": [
        "nanocurrency/nano:V25.0RC3"
    ],
    "global": {
        "BLOCK_PATH": "https://bnano.info/public/saved_blocks/5n4pr_100k_bintree.json",
        "LEDGER_PATH": "https://bnano.info/public/saved_ledgers/5n4pr_init.ldb",
        "NL_CONFIG_PATH": "https://bnano.info/public/saved_configs/grafana_5n4pr.toml"
    },
    "commands": [
        {
            "type": "snippet",
            "key": "nanomock_reset_copy_ledger_create",
            "variables": {
                "NL_CONFIG": "{NL_CONFIG_PATH}",
                "REMOTE_IP": "172.17.0.1",
                "SETUP_NODES": "nl_genesis nl_pr1 nl_pr2 nl_pr3 nl_pr4",
                "LEDGER": "{LEDGER_PATH}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit_create",
            "variables": {
                "PATH": "representatives.cpu",
                "VALUE": 0.3
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_start_init"
        },
        {
            "type": "threaded",
            "commands": [
                {
                    "type": "python",
                    "class": "NodeInteraction",
                    "method": "start_logger",
                    "delay": -0.1,
                    "variables": {
                        "logger_params": {
                            "type": "rpc",
                            "timeout": 720,
                            "expected_blocks_count": 100000,
                            "included_peers": [
                                "nl_pr1"
                            ]
                        },
                        "sink_params": [{"type": "console"}]
                    }
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 1500
                        }
                    },
                    "class": "NodeInteraction"
                }
            ]
        },
        {
            "type": "bash",
            "command": "nanomock stop"
        }
    ]
}