{
    "testcase": "5n4pr_10k_bintree_cpu_limit",
    "description": "Publish 2k bintree (send + receive) blocks to all 4PRs.\nEach PR is cpu limited to 0.1 vCPU",
    "docker_tags": [
        "nanocurrency/nano:V26.0DB13"
    ],
    "global": {
        "SETUP_NODES" : "nl_genesis nl_pr1 nl_pr2 nl_pr3 nl_pr4"
    },
    "commands": [
        {
            "type": "snippet",
            "key": "nanomock_reset_copy_ledger_create",
            "variables": {
                "NL_CONFIG": "{NL_CONFIG_PATH}",
                "REMOTE_IP": "127.0.0.1",
                "SETUP_NODES": "{SETUP_NODES}",
                "LEDGER": "{LEDGER_PATH}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit_create",
            "variables": {
                "PATH": "representatives.cpu",
                "VALUE": 0.1
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_start_init"
        },
        {
            "type": "threaded",
            "commands": [
                {
                    "type": "python",
                    "class": "NodeInteraction",
                    "method": "start_logger",
                    "delay": -0.1,
                    "variables": {
                        "logger_params": {
                            "type": "rpc",
                            "timeout": 30,
                            "expected_blocks_count": 2000,
                            "included_peers": [
                                "nl_pr1"
                            ]
                        },
                        "sink_params": [
                            {
                                "type": "console"
                            }
                        ]
                    }
                },
                {
                    "type": "python",
                    "method": "publish_blocks",
                    "variables": {
                        "publish_params": {
                            "blocks_path": "{BLOCK_PATH}",
                            "bps": 500,
                            "subset": {
                                "start_index": 0,
                                "end_index": 2000
                            }
                        }
                    },
                    "class": "NodeInteraction"
                }
            ]
        }
    ]
}
