{
    "testcase": "5n4pr_send_dependant",
    "description": "Publish 50 individual send(+receive) blocks from single account \n Always wait for the previous confirmation before sending the next block",

    "docker_tags": ["nanocurrency/nano:V25.0RC3"],
    "global": {
        "LEDGER_PATH": "https://bnano.info/public/saved_ledgers/5n4pr_bucket0-1-88-90-100_10kaccs.ldb",
        "NL_CONFIG_PATH": "https://bnano.info/public/saved_configs/default_5n4pr.toml",
        "SETUP_NODES" : "nl_genesis nl_pr1 nl_pr2 nl_pr3 nl_pr4"
    },
    "commands": [
        {
            "type": "snippet",
            "key": "nanomock_reset_copy_ledger_create",
            "variables": {
                "NL_CONFIG": "{NL_CONFIG_PATH}",
                "REMOTE_IP": "172.17.0.1",
                "SETUP_NODES": "{SETUP_NODES}",
                "LEDGER": "{LEDGER_PATH}"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit",
            "variables": {
                "PATH": "representatives.env.SPDLOG_LEVEL",
                "VALUE": "trace"
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit",
            "variables": {
                "PATH": "filelog_enable",
                "VALUE": true
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_conf_edit_create",
            "variables": {
                "PATH": "representatives.cpu",
                "VALUE": 0.3
            }
        },
        {
            "type": "snippet",
            "key": "nanomock_start_init"
        },
        {
            "type": "bash",
            "command": "####################################################################"
        },
        {
            "type": "bash",
            "command": "for i in {SETUP_NODES}; do docker inspect $i|grep 'json\\.log'; done"
        },
        {
            "type": "bash",
            "command": "####################################################################"
        },
        {
            "description": "Publish 3 * 100 dependant change blocks",
            "type": "threaded",
            "commands": [               
                {
                    "type": "python",
                    "class": "NodeInteraction",
                    "group": "g1",
                    "method": "publish_create",
                    "delay": 5,
                    "variables": {
                        "params": {
                            "type": "send_wait_conf",
                            "source_seed": "10CA10000000000000000000000000000000000000000000000000000000000A",
                            "destination_seed": "10CA10000000000000000000000000000000000000000000000000000000000A",
                            "send_amount_raw": 1,
                            "source_start_index": 0,
                            "block_count": 50,
                            "is_independent": false,
                            "timeout_s": 5,
                            "node_name": "nl_pr1"
                        }
                    }
                }            
            ]
        },
        {
            "type": "bash",
            "command": "nanomock stop"
        }
    ]
}